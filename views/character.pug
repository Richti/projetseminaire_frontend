extends layout
block content
	.container()
		h1= character.name
		h3 Classe : #{character.class}
		h3 Utilisateur : #{character.user_id}
		style.
			#map {
				height: 400px;
				width: 80%;
			}
		#map
		script.
			function initMap() {
				var position = !{JSON.stringify(character.position)};
				var myLatLng = {lat: Number(position.x), lng: Number(position.y)};
				var map = new google.maps.Map(document.getElementById('map'), {
					zoom: 17,
					center: myLatLng
				});
				var marker = new google.maps.Marker({
					position: myLatLng,
					map: map
				});
			}
		script(async='', defer='', src='https://maps.googleapis.com/maps/api/js?key=AIzaSyBjH0cnaMfM00Fw5DhHQr1ACbKFmfpWxCU&callback=initMap')
